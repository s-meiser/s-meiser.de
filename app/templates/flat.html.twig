{% extends 'html_header.html.twig' %}

{% block body %}
    {{ encore_entry_link_tags('css-flat') }}
    <div data-controller="flat">
        <div class="d-flex justify-content-between sm-icons position-relative z-1">
            <div class="col-3 margin-left mt-5">
                <div class="m-3 fs-4">
                    <a class="d-inline-block me-4" href="{{ path('index') }}">
                        <i class="fa-solid fa-chevron-left"></i>
                    </a>
                    <a class="d-inline-block" href="https://github.com/s-meiser" target="_blank">
                        <i class="fa-brands fa-github"></i>
                    </a>
                    <a class="mx-2 d-inline-block" href="https://www.linkedin.com/in/sebastian-meiser/" target="_blank">
                        <i class="fa-brands fa-linkedin"></i>
                    </a>
                    <a class="mx-2 d-inline-block" href="mailto:sebastian.meiser@gmail.com" target="_blank">
                        <i class="fa-regular fa-envelope"></i>
                    </a>
                </div>
            </div>

            <div class="col-3 margin-right mt-5">
                <div class="p-3 border ">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="col text-uppercase text-end ">
                            Hi, my name is Sebastian
                        </div>
                        <div id="menu-button" class="d-flex col-2 text-end justify-content-end ">
                            <nav class="navbar" >
                                <button class="navbar-toggler"
                                        type="button"
                                        aria-label="Toggle navigation"
                                        data-action="click->flat#navbar"
                                >
                                    <div class="menu-button-bar"></div>
                                    <div class="menu-button-bar"></div>
                                    <div class="menu-button-bar"></div>
                                </button>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid content-container p-0 m-0 position-relative">
            <div class="row p-0 m-0">
                <div class="border navbar-grid-effect">
                    <div class="container">
                        <div id="home" class="row" style="height:800px">
                                <div class="col ">
                                    Content
                                </div>
                        </div>
                        <div id="about" class="row">
                            <div class="col">
                                About
                            </div>
                        </div>

                    </div>
                </div>
                <div class="navbar-container p-0 m-0 vh-100">
                    <div class="menu-container col">
                        <ul class="navbar-nav fs-4 fw-medium"
                            data-action="click->flat#navLink">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="#about">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="#work">Work</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="#contact">Contact</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('flat') }}
{% endblock %}